<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MAP.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MAP"
    Shell.FlyoutBehavior="Flyout"
    Shell.BackgroundColor="Blue"
    Shell.TitleColor="White"
    Title="MAP">
    <Shell.FlyoutHeader>
        <VerticalStackLayout>
            <Label Text="MENU" HeightRequest="50" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"></Label>
        </VerticalStackLayout>
    </Shell.FlyoutHeader>

    <ShellContent
        Title="MAP"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    
    <ShellContent
     Title="Checklist"
     ContentTemplate="{DataTemplate local:MainPage}"
     Route="MainPage" />

    <ShellContent
     Title="Challanges"
     ContentTemplate="{DataTemplate local:MainPage}"
    Route="MainPage" />

    <ShellContent
    Title="About"
    ContentTemplate="{DataTemplate local:MainPage}"
    Route="MainPage" />
    
</Shell>
